@{
    ViewBag.Title = "Gallery";
}


@section aside{
    <h3>Galleries</h3>
    @Html.Ipsum().ul(listCount : 5, wordCount : 2, links : true)
}


<h2>Our Work</h2>

@Html.Ipsum().p(1)

@for(int i = 0; i<3; i++){
    <div class="row panel">
        <div class="medium-4 columns">
            <a class="th" href="@Url.Action("Gallery", "Gallery")">
                @Html.Placehold(400, 400, text:"Gallery " + i.ToString())
            </a>
        </div>
        <div class="medium-8 columns">
            
            <div class="show-for-medium-up">
                <blockquote>
                    @Html.Ipsum().p(1)
                    <cite>Happy Customer</cite>
                </blockquote>
            </div>
        </div>
    </div>
}





